<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MoleculeEfficienceTracker.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             Title="Bromazépam Tracker">

    <!-- Ressources pour styles réutilisables -->
    <ContentPage.Resources>
        <!-- Style de Frame général (cartes) -->
        <Style x:Key="CardFrameStyle"
               TargetType="Frame">
            <Setter Property="BackgroundColor"
                    Value="#F7FAFC"/>
            <Setter Property="CornerRadius"
                    Value="18"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="HasShadow"
                    Value="True"/>
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#C9D6FF"
                            Offset="0,4"
                            Radius="16"
                            Opacity="0.13"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="BackgroundColor"
                    Value="#3182CE"/>
            <Setter Property="TextColor"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="FontAttributes"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="14,8"/>
        </Style>
        <Style x:Key="DeleteButtonStyle"
               TargetType="Button">
            <Setter Property="BackgroundColor"
                    Value="#E53E3E"/>
            <Setter Property="TextColor"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="FontAttributes"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="12,8"/>
        </Style>
        <!-- Fond général de la page -->
        <Color x:Key="MainBgColor">#F0F4F8</Color>
        <!-- Pour le EmptyState -->
        <Style x:Key="EmptyLabelStyle"
               TargetType="Label">
            <Setter Property="TextColor"
                    Value="#A0AEC0"/>
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="HorizontalOptions"
                    Value="Center"/>
            <Setter Property="FontAttributes"
                    Value="Italic"/>
            <Setter Property="Margin"
                    Value="0,20,0,0"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Background>
        <SolidColorBrush Color="{StaticResource MainBgColor}"/>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Spacing="28"
                             Padding="26"
                             BackgroundColor="{StaticResource MainBgColor}">

            <!-- HEADER -->
            <Label Text="📊 Calculateur de Bromazépam"
                   FontSize="32"
                   TextColor="#2D3748"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,10,0,8"
                   Shadow="2,2,6,Gray"/>

            <!-- AJOUTER UNE DOSE -->
            <Frame Style="{StaticResource CardFrameStyle}"
                   Margin="0,0,0,0">
                <VerticalStackLayout Spacing="14">
                    <Label Text="💊 Ajouter une dose"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#3182CE"/>
                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="12"
                          RowSpacing="12">
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="Dose (mg):"
                               VerticalOptions="Center"/>
                        <Frame Grid.Row="0"
                               Grid.Column="1"
                               CornerRadius="8"
                               Padding="0"
                               BackgroundColor="#EBF8FF"
                               HasShadow="False"
                               VerticalOptions="Center"
                               HeightRequest="38">
                            <Entry x:Name="DoseEntry"
                                   Placeholder="3.0"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   HeightRequest="38"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Text="Date/Heure:"
                               VerticalOptions="Center"/>
                        <HorizontalStackLayout Grid.Row="1"
                                               Grid.Column="1"
                                               Spacing="8">
                            <DatePicker x:Name="DatePicker"/>
                            <TimePicker x:Name="TimePicker"
                                        Format="HH:mm"/>
                        </HorizontalStackLayout>
                    </Grid>
                    <Button x:Name="AddDoseBtn"
                            Text="Ajouter la dose"
                            Clicked="OnAddDoseClicked"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- CONCENTRATION & GRAPHIQUE -->
            <Frame Style="{StaticResource CardFrameStyle}"
                   BackgroundColor="#E6FFFA">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Concentration actuelle"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#319795"/>
                    <Label x:Name="ConcentrationLabel"
                           FontSize="38"
                           FontAttributes="Bold"
                           TextColor="#22543D"
                           HorizontalOptions="Center"/>
                    <Label x:Name="LastUpdateLabel"
                           FontSize="14"
                           TextColor="#718096"
                           HorizontalOptions="Center"/>
                    <Frame Padding="10"
                           CornerRadius="10"
                           BackgroundColor="White"
                           HasShadow="True"
                           Margin="0,8,0,0"
                           HeightRequest="300">
                        <chart:SfCartesianChart x:Name="ConcentrationChart">
                            
                            <!-- Ajouter le trackball -->
                            <chart:SfCartesianChart.TrackballBehavior>
                                <chart:ChartTrackballBehavior ShowLabel="True"
                                                              ShowMarkers="True"
                                                              ShowLine="True"                                                              
                                                              DisplayMode="FloatAllPoints">
                                    <!-- Style de la ligne du trackball -->
                                    <chart:ChartTrackballBehavior.LineStyle>
                                        <chart:ChartLineStyle Stroke="Red" 
                                                              StrokeWidth="1.5" 
                                                              StrokeDashArray="4,2"/>
                                    </chart:ChartTrackballBehavior.LineStyle>

                                    <!-- Style des étiquettes du trackball -->
                                    <chart:ChartTrackballBehavior.LabelStyle>
                                        <chart:ChartLabelStyle Background="DarkSlateGray" 
                                                               TextColor="White" 
                                                               FontSize="10"
                                                               CornerRadius="3"
                                                               />
                                    </chart:ChartTrackballBehavior.LabelStyle>

                                    <!-- Style des marqueurs du trackball (si vous voulez qu'ils soient différents de ceux de la série) -->
                                    <chart:ChartTrackballBehavior.MarkerSettings>
                                        <chart:ChartMarkerSettings Type="Diamond"
                                                                   Fill="OrangeRed"
                                                                   Stroke="White"
                                                                   StrokeWidth="1"
                                                                   Height="10" Width="10"/>
                                    </chart:ChartTrackballBehavior.MarkerSettings>
                                </chart:ChartTrackballBehavior>
                            </chart:SfCartesianChart.TrackballBehavior>

                            <!-- Activer le zoom et le panoramique (défilement) -->
                            <chart:SfCartesianChart.ZoomPanBehavior>
                                <chart:ChartZoomPanBehavior ZoomMode="X" EnablePanning="True"/>
                                <!-- ZoomMode="X" limite le zoom à l'axe X (temps), ce qui est généralement souhaité. -->
                            </chart:SfCartesianChart.ZoomPanBehavior>

                            <chart:SfCartesianChart.XAxes>
                                <chart:DateTimeAxis ShowMajorGridLines="True"
                                                    ShowMinorGridLines="True"
                                                    MajorGridLineStyle="{StaticResource GridLineStyle}"
                                                    MinorGridLineStyle="{StaticResource MinorGridLineStyle}">
                                    <chart:DateTimeAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle LabelFormat="HH:mm"
                                                                   FontSize="10"/>
                                    </chart:DateTimeAxis.LabelStyle>
                                    <!-- Afficher plus de labels sur l'axe X -->
                                    <chart:DateTimeAxis.AxisLineStyle>
                                        <chart:ChartLineStyle StrokeWidth="1"
                                                              Stroke="Gray"/>
                                    </chart:DateTimeAxis.AxisLineStyle>
                                </chart:DateTimeAxis>
                            </chart:SfCartesianChart.XAxes>

                            <chart:SfCartesianChart.YAxes>
                                <chart:NumericalAxis ShowMajorGridLines="True"
                                                     ShowMinorGridLines="True"
                                                     Minimum="0"
                                                     RangePadding="Additional"> <!-- Permet un peu d'espace au-dessus de la valeur max -->
                                    <chart:NumericalAxis.Title>
                                        <chart:ChartAxisTitle Text="Concentration (unités)"/>
                                    </chart:NumericalAxis.Title>
                                    <chart:NumericalAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle LabelFormat="F1"
                                                                   FontSize="10"/>
                                    </chart:NumericalAxis.LabelStyle>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.YAxes>

                            <chart:LineSeries x:Name="ConcentrationSeries"
                                              ItemsSource="{Binding ChartData}"
                                              XBindingPath="Time"
                                              YBindingPath="Concentration"
                                              Fill="Blue"
                                              StrokeWidth="3"
                                              EnableTooltip="True"
                                              ShowMarkers="True"
                                              MarkerSettings="{StaticResource MarkerSettings}">

                                <!-- Tooltip personnalisé -->
                                <chart:LineSeries.TooltipTemplate>
                                    <DataTemplate>
                                        <Border Background="Black"
                                                Padding="10">
                                            <StackLayout>
                                                <Label Text="{Binding Item.Time, StringFormat='🕐 {0:dd/MM HH:mm}'}"
                                                       TextColor="White"
                                                       FontSize="12"/>
                                                <Label Text="{Binding Item.Concentration, StringFormat='📊 {0:F2} unités'}"
                                                       TextColor="White"
                                                       FontSize="12"
                                                       FontAttributes="Bold"/>
                                            </StackLayout>
                                        </Border>
                                    </DataTemplate>
                                </chart:LineSeries.TooltipTemplate>
                            </chart:LineSeries>

                            <!-- Ajouter les annotations pour chaque dose -->
                            <chart:SfCartesianChart.Annotations>
                                <!-- Les annotations seront ajoutées dynamiquement dans le code-behind -->
                            </chart:SfCartesianChart.Annotations>

                        </chart:SfCartesianChart>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- LISTE DES DOSES -->
            <Frame Style="{StaticResource CardFrameStyle}"
                   BackgroundColor="#FFFDE7">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Doses récentes"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#B7791F"/>
                    <Grid x:Name="DosesListContainer"
                          RowDefinitions="Auto,Auto">
                        <!-- Empty State (masqué quand il y a des doses) -->
                        <Label x:Name="EmptyDosesLabel"
                               Text="Aucune dose enregistrée 💤"
                               IsVisible="False"
                               Style="{StaticResource EmptyLabelStyle}"/>
                        <!-- CollectionView : la liste -->
                        <CollectionView x:Name="DosesCollection" 
                                        ItemsSource="{Binding Doses}"
                                        MaximumHeightRequest="300"
                                        IsVisible="True">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#FAF5FF"
                                           CornerRadius="8"
                                           Padding="0"
                                           Margin="0,3"
                                           HasShadow="False">
                                        <Grid Padding="10,6"
                                              ColumnDefinitions="*,*,Auto"
                                              VerticalOptions="Center">
                                            <Label Grid.Column="0"
                                                   Text="{Binding TimeTaken, StringFormat='{0:dd/MM HH:mm}'}"
                                                   VerticalOptions="Center"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding DoseMg, StringFormat='{0}mg'}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center"/>
                                            <Button Grid.Column="2"
                                                    Text="❌"
                                                    CommandParameter="{Binding Id}"
                                                    Clicked="OnDeleteDoseClicked"
                                                    Style="{StaticResource DeleteButtonStyle}"
                                                    WidthRequest="38"
                                                    HeightRequest="28"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>

                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- BOUTONS EXPORT/RESET -->
            <Frame Style="{StaticResource CardFrameStyle}"
                   Padding="12"
                   BackgroundColor="#EDF2F7">
                <HorizontalStackLayout Spacing="22"
                                       HorizontalOptions="Center">
                    <Button Text="💾 Exporter"
                            Clicked="OnExportDataClicked"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                    <Button Text="🗑️ Effacer tout"
                            Clicked="OnClearAllDataClicked"
                            Style="{StaticResource DeleteButtonStyle}"/>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
